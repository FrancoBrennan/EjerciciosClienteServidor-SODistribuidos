#include <stdio.h>
#include <stdlib.h>
#include <string.h>
#include <unistd.h>
#include <arpa/inet.h>

#define PORT 8080

void send_command(const char *ip_address, const char *command) {
    int sock = 0;
    struct sockaddr_in serv_addr;
    char buffer[2048] = {0};

    if ((sock = socket(AF_INET, SOCK_STREAM, 0)) < 0) {
        printf("Socket creation error\n");
        return;
    }

    serv_addr.sin_family = AF_INET;
    serv_addr.sin_port = htons(PORT);

    if (inet_pton(AF_INET, ip_address, &serv_addr.sin_addr) <= 0) {
        printf("Invalid address/ Address not supported\n");
        return;
    }

    if (connect(sock, (struct sockaddr *)&serv_addr, sizeof(serv_addr)) < 0) {
        printf("Connection Failed\n");
        return;
    }

    send(sock, command, strlen(command), 0);
    printf("Command sent: %s\n", command);
    int valread = read(sock, buffer, 2048);
    printf("Server response: %s\n", buffer);

    close(sock);
}

int main(int argc, char const *argv[]) {
    if (argc < 2) {
        printf("Usage: %s <IP_ADDRESS>\n", argv[0]);
        return 1;
    }

    char ip_address[50];
    strcpy(ip_address, argv[1]);

    int choice;
    do {
        printf("\n--- Menu ---\n");
        printf("1. Write to shared memory\n");
        printf("2. Read from shared memory\n");
        printf("3. Show occupied and unoccupied positions\n");
        printf("4. Exit\n");
        printf("Enter your choice: ");
        scanf("%d", &choice);

        char command[1024];
        switch (choice) {
            case 1:
                printf("Enter index and value to write (e.g., 1 value): ");
                int index;
                char value[256];
                scanf("%d %[^\n]", &index, value);
                snprintf(command, sizeof(command), "write %d %s", index, value);
                send_command(ip_address, command);
                break;
            case 2:
                printf("Enter index to read (e.g., 1): ");
                int read_index;
                scanf("%d", &read_index);
                snprintf(command, sizeof(command), "read %d", read_index);
                send_command(ip_address, command);
                break;
            case 3:
                snprintf(command, sizeof(command), "show_table");
                send_command(ip_address, command);
                break;
            case 4:
                printf("Exiting...\n");
                break;
            default:
                printf("Invalid choice\n");
        }
    } while (choice != 4);

    return 0;
}

